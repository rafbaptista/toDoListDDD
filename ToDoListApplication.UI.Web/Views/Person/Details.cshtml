@using ToDoListApplication.UI.Web.Controllers
@using ToDoListApplication.UI.Web.ViewModels
@model PersonViewModel

<div class="container-fluid justify-content-center">
    <h2 class="text-center display-4 mb-4">Details</h2>
    <div class="row justify-content-center">

        <div class="card col-lg-5 col-md-7 col-sm-10 m-2 p-0">
            <div class="card-header">
                <div class="col-12 ">
                    <span class="font-weight-bold">#@Html.Raw(Model.Id)</span>
                    <span class="font-weight-bold">@Html.Raw(Model.Name)</span>
                    <img src="@Model.AvatarImagePath" class="float-right" style="max-width:30px;max-height:30px;border-radius:50%" />
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Name):                        
                        @Html.DisplayFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Age):
                        @Html.DisplayFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Gender):
                        @Html.DisplayFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                    </div>                                        
                    <div class="col-md-12 text-center">
                        <hr />
                        @Html.LabelFor(model => model.Tasks)
                        <hr />
                        @foreach (var task in Model.Tasks)
                        {
                            <a href="@Url.Action(nameof(TaskController.Details), "Task", new {Id = task.Id })">@task.Description</a>
                            <br />
                        }
                    </div>               
                </div>
            </div>
           
        </div>
    </div>
</div>
